<Window x:Class="GuildGame.UI.MerchantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:GuildGame.UI.Converters"
        mc:Ignorable="d"
        Title="Marchand" Height="500" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <conv:AbsValueConverter x:Key="AbsValueConverter" />
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBlock FontWeight="Bold" FontSize="14" Text="Offres du Marchand" Margin="0,0,0,10" />
        <ItemsControl ItemsSource="{Binding Offers}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="6" Margin="0,0,0,6">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                            <TextBlock FontSize="11">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="CoÃ»t: {0} Or">
                                        <Binding Path="Cost.Money" Converter="{StaticResource AbsValueConverter}" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Button Content="Acheter" Padding="6,3" Margin="0,4,0,0" Command="{Binding DataContext.BuyOfferCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>
