<Window x:Class="GuildGame.UI.RecruitmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recrutement de héros" Height="500" Width="750" WindowStartupLocation="CenterOwner" Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Sélectionnez un héros à recruter (Coût: 10 or + 2 nourriture)" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" />

        <ItemsControl Grid.Row="1" ItemsSource="{Binding AvailableHeroes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="12" Margin="8" Width="150" Background="White" CornerRadius="4">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontWeight="Bold" Text="{Binding Name}" TextWrapping="Wrap" />
                            <TextBlock FontSize="11" Margin="0,4,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Classe: {0}">
                                        <Binding Path="DisplayClass" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock FontSize="11" Margin="0,2,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="Niv: {0}">
                                        <Binding Path="Level" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock FontSize="11" Margin="0,2,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="PV: {0}">
                                        <Binding Path="MaxHealth" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <Button Content="Recruter" Padding="6,4" Margin="0,8,0,0" Command="{Binding DataContext.RecruitHeroCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Grid.Row="2" Content="Fermer" Width="80" HorizontalAlignment="Right" Padding="8,4" Click="Close_Click" />
    </Grid>
</Window>